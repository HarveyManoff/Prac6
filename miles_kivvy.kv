BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .2
            Button:
                text: 'Up'
                #size_hint_x: .2
                on_press: app.handle_increment(+1)
            Button:
                text: 'Down'
                #size_hint_x: .2
                on_press: app.handle_increment(-1)
    Label:
        id: output_label
        text: ''

